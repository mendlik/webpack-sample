{
  "name": "webpack-starter-vanilla-spa",
  "version": "1.0.0",
  "main": "index.js",
  "author": "mendlik <mendelski.pawel@gmail.com>",
  "repository": "https://github.com/mendlik/webpack-starter",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test:file": "jest $*",
    "test:unit": "jest ./test/**/*.unit.spec.js",
    "test:ui": "jest ./test/**/*.ui.spec.js",
    "test:ui:update": "jest --updateSnapshot ./test/**/*.ui.spec.js",
    "test": "jest ./test/**/*.spec.js",
    "clean": "rimraf ./build",
    "lint": "eslint --max-warnings 0 --cache .",
    "favicons": "babel-node ./lib/favicons",
    "build": "webpack --progress --config ./webpack.babel.js",
    "ci": "run-s clean lint test build",
    "build:debug": "npm run build -- --env.mode debug",
    "build:watch": "npm run build -- --watch --env.mode debug",
    "serve": "http-server ./build",
    "livereload": "livereload ./build",
    "watch": "webpack-dev-server --inline --hot --watch --port 9090 --config ./webpack.babel.js --env.mode watchHot",
    "watch:reload": "webpack-dev-server --watch --config --port 9090 ./webpack.babel.js --env.mode watchReload",
    "watch:livereload": "run-p livereload serve build:watch"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "copy-webpack-plugin": "^4.2.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "favico": "^1.2.2",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "http-server": "^0.10.0",
    "inline-manifest-webpack-plugin": "^3.0.1",
    "jest": "^21.2.1",
    "jsdom": "^11.3.0",
    "livereload": "^0.6.3",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-loader": "^2.0.8",
    "resolve-url-loader": "^2.2.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-chunk-hash": "^0.5.0",
    "webpack-dev-server": "^2.9.4"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bootstrap": "^4.0.0-beta.2",
    "jquery": "^3.2.1",
    "popper.js": "^1.12.6",
    "precss": "^2.0.0",
    "raw-loader": "^0.5.1"
  }
}
